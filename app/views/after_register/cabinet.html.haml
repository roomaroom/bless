- content_for :body_class, "onboarding onboarding-signup"

.container.content.sign-up
  .row
    .col-md-8.col-md-push-2
      .well
        .progress
          .progress-bar.progress-bar-info{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", :role => "progressbar", :style => "width: 60%"}
            %span.sr-only 60% Complete

        %h2 Business Projects
        %p Your Brothers need to know your current and past business projects. The more projects you can add, the better!
        %hr/
        = render layout: 'form' do |f|
          = render 'project', f: f
          %ul.pager
            %li.pull-left
              = f.submit "Previous", name: "back_button", class: 'btn btn-default back-button'
            %li.pull-right
              = f.submit "Continue", class: 'btn btn-default continue-button'
